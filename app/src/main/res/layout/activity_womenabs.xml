            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/wa4"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>

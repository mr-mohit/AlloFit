<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workout.menback">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1  Bent-Over Barbell Deadlift"
            android:textSize="25sp"
            android:padding="18dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       8-12 reps or to failure"
            android:textSize="25sp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"

            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/dead1"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="2   Wide-Grip Pull-Up"
            android:textSize="28sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="    8-12 reps or to failure"
            android:textSize="28sp"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"

            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/d3"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="3 Wide-Grip Seated Cable Row"
            android:textSize="28sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="   12-15 reps or to failure"
            android:textSize="28sp"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"

            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/d5"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="4 Close-Grip Pull-Down"
            android:textSize="28sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="   12-15 reps or to failure"
            android:textSize="28sp"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"

            android:layout_height="150dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/d7"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workout.menabs">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1  Sit-Up"
        android:textSize="28sp"
        android:padding="18dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      15-20 reps or to failure"
        android:textSize="28sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"

        android:layout_height="150dp"
        android:orientation="horizontal">
    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/situp1"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/situp2"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="2 Flat Bench Lying Leg Raise"
        android:textSize="28sp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="   15-20 reps or to failure"
        android:textSize="28sp"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"

        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/bench1"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/bench2"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="3 Jackknife Sit-Up"
        android:textSize="28sp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="   15-20 reps or to failure"
        android:textSize="28sp"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"

        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/situup1"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/situup2"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="4 Toe Touchers"
        android:textSize="28sp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="   15-20 reps or to failure"
        android:textSize="28sp"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"

        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/toe1"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/toe2"/>
    </LinearLayout>


</LinearLayout>

</ScrollView>
